<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.knightdavion.kotlin.ibiliplayer.ui.fragment.HomePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="1dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/searchEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|end"
                android:layout_marginLeft="8dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_search_24dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/discover_search_hint"
                android:textColor="@color/black_alpha_45"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginRight="8dp"
                android:clickable="true"
                android:src="@drawable/ic_qr_scan_24dp"
                android:tint="@color/gray_20"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/everyone_in_the_search"
            android:textColor="@color/black_alpha_45"
            android:textSize="14sp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/smallTagFlowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            app:max_select="-1"/>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:overScrollMode="never"
            android:visibility="gone">

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/bigTagFlowLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                app:max_select="-1"/>
        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/moreTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_arrow_down_gray_round"
            android:gravity="center"
            android:text="查看更多"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@+id/interest"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_btn_group"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="兴趣圈"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/topic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_header_topic_center"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="话题中心"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_header_activity_center"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="活动中心"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/blackhouse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_header_black_list_center"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="小黑屋"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/originalRank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_btn_rank_original"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="原创排行榜"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/allRank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_btn_rank_all"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="全区排行榜"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/game"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_btn_game"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="游戏中心"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/white"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_btn_shop"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:paddingStart="16dp"
                android:text="周边商城"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
